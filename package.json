{
  "name": "pokemon-preact-app",
  "version": "1.0.0",
  "description": "Aplicação Pokémon com Preact, Redux Toolkit e Feature Based Architecture",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:analyze": "ANALYZE=true vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:unit": "vitest run --config=vitest.unit.config.js --reporter=verbose",
    "test:integration": "vitest run --reporter=verbose src/__tests__/integration/**/*.test.{js,jsx}",
    "test:e2e": "vitest run --reporter=verbose src/__tests__/e2e/**/*.test.{js,jsx}",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext js,jsx --fix",
    "docs:serve": "docsify serve docs -p 3000"
  },
  "dependencies": {
    "@mui/icons-material": "^5.15.1",
    "@mui/material": "^5.15.1",
    "@reduxjs/toolkit": "^2.0.1",
    "graphql-request": "^7.2.0",
    "i18next": "^25.5.2",
    "i18next-browser-languagedetector": "^8.2.0",
    "preact": "^10.19.3",
    "preact-router": "^4.1.2",
    "react-i18next": "^15.7.3",
    "react-redux": "^9.0.4"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.8.2",
    "@testing-library/jest-dom": "^6.1.6",
    "@testing-library/preact": "^3.2.3",
    "docsify": "^5.0.0-rc.3",
    "docsify-cli": "^5.0.0-rc.1",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jsdom": "^23.0.1",
    "rollup-plugin-visualizer": "^6.0.3",
    "sass": "^1.69.5",
    "vite": "^7.1.7",
    "vite-bundle-analyzer": "^1.2.3",
    "vitest": "^3.2.4"
  }
}
